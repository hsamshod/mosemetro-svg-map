{
  "browsersync": {
    "options": {
        "proxy": "map.dev",
      "open":  "external"
    }
  },
  "coffee": {
    "task": {
      "options": {
        "bare": true
      }
    },
    "module": {
      "src": [
        "scripts/coffee/**/*.coffee",
        "!scripts/coffee/app.coffee"
      ],
      "bundle": "svg.js",
      "dest": "scripts"
    },
    "app": {
      "src": [
        "scripts/coffee/app.coffee"
      ],
      "bundle": "app.js",
      "dest": "scripts"
    }
  },
  "bower": {
    "dest": "scripts/",
    "bundle": "vendor.js"
  }
}