{
  "browsersync": {
    "options": {
        "proxy": "map.dev",
      "open":  "external"
    }
  },
  "coffee": {
    "task" : {
      "options": {
        "bare": true
      }
    },
    "assets": {
      "src": [
        "scripts/coffee/**/*coffee",
        "!scripts/coffee/svg.coffee"
      ],
      "bundle": "assets.js",
      "dest": "scripts"
    }
  },
  "bower": {
    "dest": "scripts/",
    "bundle": "vendor.js"
  }
}